<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:card_view="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.vssnake.potlach.main.fragments.views.FragmentSpecialInfo"
             android:fillViewport="false"
>



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Most Touched Gifts"
                android:gravity="center"
                android:background="@color/colorPrimary_dark"/>

            <view
                android:layout_width="360dp"
                android:layout_height="150dp"
                class="com.etsy.android.grid.util.DynamicHeightImageView"
                android:src="@drawable/default_image"
                android:scaleType="centerCrop"
                android:id="@+id/sp_1_gift"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="1º Title"
                android:background="@drawable/user_info_background_card"
                android:gravity="center"/>

            <view
                android:layout_width="360dp"
                android:layout_height="150dp"
                class="com.etsy.android.grid.util.DynamicHeightImageView"
                android:src="@drawable/default_image"
                android:scaleType="centerCrop"
                android:layout_marginTop="15dp"
                android:id="@+id/sp_2_gift"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="2º Title"
                android:background="@drawable/user_info_background_card"
                android:gravity="center"/>
            <view
                android:layout_width="360dp"
                android:layout_height="150dp"
                class="com.etsy.android.grid.util.DynamicHeightImageView"
                android:src="@drawable/default_image"
                android:scaleType="centerCrop"
                android:layout_marginTop="15dp"
                android:id="@+id/sp_3_gift"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="3º Title"
                android:background="@drawable/user_info_background_card"
                android:gravity="center"/>



            <view
                android:layout_width="fill_parent"
                android:layout_height="180dp"
                class="android.support.v7.widget.CardView"
                android:id="@+id/view3"
                android:layout_gravity="center_horizontal"
                card_view:cardCornerRadius="10dp"
                android:elevation="6dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="50dp"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center">

                    <TextView
                        android:text="@string/top_users"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:gravity="center"
                        android:background="@color/colorPrimary_dark"/>

                    <TextView
                        android:text="1º  Pepito Grillo"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/sp_1_user"
                        android:textColor="@color/material_deep_teal_500"
                        android:gravity="left"
                        android:layout_marginTop="3dp"
                        android:paddingLeft="20dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"/>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/primary_dark_material_light"

                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:text="2º  Juan Palomo"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/sp_2_user"
                        android:textColor="@color/material_deep_teal_500"
                        android:paddingLeft="20dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"/>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/primary_dark_material_light"

                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:text="3º  Armando Casas"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/sp_3_user"
                        android:textColor="@color/material_deep_teal_500"
                        android:paddingLeft="20dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"/>

                </LinearLayout>


                </view>


        </LinearLayout>



</ScrollView>
